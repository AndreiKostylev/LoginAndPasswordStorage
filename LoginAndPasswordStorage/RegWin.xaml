<Window x:Class="LoginAndPasswordStorage.RegWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginAndPasswordStorage"
        mc:Ignorable="d"
        Title="RegWin" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите логин" FontSize="16" />
            <TextBox x:Name="LoginTextBox" Margin="0 5" />
            <TextBlock Text="Введите пароль" FontSize="16" Margin="0 10 0 0" />
            <PasswordBox x:Name="PasswordBox" Margin="0 5" />
            <Button Content="Зарегистрироваться" Click="RegButton_Click" Margin="99 10 99 0" />

            <Button Content="Назад" Click="BackButtonClick" Margin="99 10 99 0" />
        </StackPanel>
    </Grid>
</Window>
