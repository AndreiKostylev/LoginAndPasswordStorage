<Window x:Class="LoginAndPasswordStorage.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginAndPasswordStorage"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="ServiceNameTextBox" Margin="5" />
        <Label Content="Сервис" Foreground="Gray" Margin="5,-8,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        <TextBox Name="LoginTextBox" Margin="5" />
        <Label Content="Логин" Foreground="Gray" Margin="5,-8,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        <PasswordBox Name="PasswordTextBox" Margin="5" />
        <Label Content="Пароль" Foreground="Gray" Margin="5,-8,0,0" VerticalAlignment="Center" IsHitTestVisible="False"/>
        <Button Name="SaveButton" Content="Добавить" Margin="5" Click="SaveButton_Click"/>
        <Button Name="BackButton" Content="Назад" Margin="5" Click="BackButton_Click"/>
    </StackPanel>
</Window>
