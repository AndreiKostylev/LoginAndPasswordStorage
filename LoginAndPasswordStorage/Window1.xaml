<Window x:Class="LoginAndPasswordStorage.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginAndPasswordStorage"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логин" FontSize="16" />
            <TextBox x:Name="LoginTextBox" Margin="0 5" />
            <TextBlock Text="Пароль" FontSize="16" Margin="0 10 0 0" />
            <PasswordBox x:Name="PasswordBox" Margin="0 5" />
            <Button Content="Войти" Click="LoginButton_Click" Margin="0 10 0 0" />
            <TextBlock x:Name="MessageTextBlock" Foreground="Red" Margin="0 10 0 0" />
            <Button Content="Зарегистрироваться" Click="LoginButton_Click" Margin="0 0 0 0" />
        </StackPanel>
    </Grid>
</Window>
